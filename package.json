{
    "name": "typed-event-target",
    "version": "1.4.1",
    "description": "EventTarget in the browser but with strong event typing.",
    "keywords": [
        "browser",
        "event-target",
        "EventTarget",
        "type",
        "typed"
    ],
    "homepage": "https://github.com/electrovir/typed-event-target",
    "bugs": {
        "url": "https://github.com/electrovir/typed-event-target/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/typed-event-target"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "scripts": {
        "compile": "tsc --project tsconfig.json && tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
        "docs:update": "virmator code-in-markdown --index src/index.ts README.md",
        "format": "virmator format",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "test": "virmator test-web",
        "test:all": "npm run test:types && npm run test:coverage && npm run test:spelling && npm run test:format && npm run test:docs",
        "test:coverage": "npm run test coverage",
        "test:docs": "virmator code-in-markdown check --index src/index.ts README.md",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/common": "^21.3.6"
    },
    "devDependencies": {
        "@open-wc/testing": "3.2.0",
        "@types/mocha": "^10.0.3",
        "@web/dev-server-esbuild": "^0.4.3",
        "@web/test-runner": "^0.17.2",
        "@web/test-runner-commands": "^0.8.2",
        "@web/test-runner-playwright": "^0.10.2",
        "@web/test-runner-visual-regression": "^0.8.2",
        "cspell": "^7.3.8",
        "dependency-cruiser": "^15.0.0",
        "esbuild": "^0.19.5",
        "istanbul-smart-text-reporter": "^1.1.2",
        "markdown-code-example-inserter": "^0.3.2",
        "npm-check-updates": "~16.12.3",
        "prettier": "^3.0.3",
        "prettier-plugin-interpolated-html-tags": "^1.0.2",
        "prettier-plugin-jsdoc": "^1.1.1",
        "prettier-plugin-multiline-arrays": "^3.0.0",
        "prettier-plugin-organize-imports": "^3.2.3",
        "prettier-plugin-packagejson": "^2.4.6",
        "prettier-plugin-sort-json": "^3.1.0",
        "prettier-plugin-toml": "^1.0.0",
        "virmator": "^11.1.0"
    },
    "overrides": {
        "semver": "^7.5.3"
    }
}
